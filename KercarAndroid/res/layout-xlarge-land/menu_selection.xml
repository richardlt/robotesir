<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_blanc_noir_vert"
    android:orientation="vertical" >
       
    
    <Button
       	android:id="@+id/button_com_man"
       	android:layout_width="800dp"
       	android:layout_height="wrap_content"
       	android:layout_marginTop="300dp"
       	android:layout_marginLeft="250dp"
       	android:text="@string/button_commandes_manuelles"
       	android:textSize="50sp"
       	android:textColor="#ffffff"/>
    
	<Button
	    android:id="@+id/button_creer_editer"
	    android:layout_width="799dp"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="250dp"
	    android:layout_marginTop="40dp"
	    android:text="@string/button_creation_edition_mission"
	    android:textColor="#ffffff"
	    android:textSize="50sp" />
	
	<Button
	    android:id="@+id/button_lancer"
	    android:layout_width="799dp"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="250dp"
	    android:layout_marginTop="40dp"
	    android:text="@string/button_lancer_mission"
	    android:textColor="#ffffff"
	    android:textSize="50sp" />

	
