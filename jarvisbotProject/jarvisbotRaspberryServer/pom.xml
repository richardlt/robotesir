<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
       <artifactId>jarvisbotProject</artifactId>
       <groupId>jarvisbot</groupId>
       <version>0.0.1-SNAPSHOT</version>
  </parent>
  <groupId>jarvisbotRaspberryServer</groupId>
  <artifactId>jarvisbotRaspberryServer</artifactId>
  <packaging>war</packaging>
  <dependencies>
  <dependency>
  	<groupId>javax</groupId>
  	<artifactId>javaee-api</artifactId>
  	<version>7.0</version>
  </dependency>
  <dependency>
  	<groupId>jarvisbotLibrary</groupId>
  	<artifactId>jarvisbotLibrary</artifactId>
  	<version>0.0.1-SNAPSHOT</version>
  </dependency>
  <dependency>
  	<groupId>jarvisbotLibArduino</groupId>
  	<artifactId>jarvisbotLibArduino</artifactId>
  	<version>0.0.1-SNAPSHOT</version>
  </dependency>
  <dependency>
  	<groupId>jarvisbotRaspberryWifi</groupId>
  	<artifactId>jarvisbotRaspberryWifi</artifactId>
  	<version>0.0.1-SNAPSHOT</version>
  </dependency>
  </dependencies>
  <build>
    <finalName>jarvisbotRaspberryServer</finalName>
    <plugins>
        <plugin>
		  <groupId>org.codehaus.cargo</groupId>
		  <artifactId>cargo-maven2-plugin</artifactId>
		  <version>1.1.2</version>
		  <configuration>
		    <container>
		      <containerId>tomcat7x</containerId>
		      <type>remote</type>
		    </container>
		    <configuration>
		      <type>runtime</type>
		      <properties>
		        <cargo.remote.uri>
		          http://192.168.1.5:8080/manager/text
		        </cargo.remote.uri>
		        <cargo.remote.username>tomcat</cargo.remote.username>
		        <cargo.remote.password>tomcat</cargo.remote.password>
		      </properties>
		    </configuration>
		    <deployer>
		      <type>remote</type>
		      <deployables>
		        <deployable>
		          <groupId>jarvisbotRaspberryServer</groupId>
		          <artifactId>jarvisbotRaspberryServer</artifactId>
		          <type>war</type>
		        </deployable>
		      </deployables>
		    </deployer>
		  </configuration>
		   <executions>
			<execution>
				<id>verify-deploy</id>
				<phase>install</phase>
				<goals>
					<goal>deployer-redeploy</goal>
				</goals>
			</execution>
			<execution>
				<id>clean-undeploy</id>
				<phase>pre-clean</phase>
				<goals>
					<goal>stop</goal>
				</goals>
			</execution>
	            </executions>
		</plugin>
    </plugins>
  </build>
</project>