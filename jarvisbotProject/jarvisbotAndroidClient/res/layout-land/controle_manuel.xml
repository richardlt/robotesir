<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <Button
        android:id="@+id/buttonAvance"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/fleche_haut" />

    <Button
        android:id="@+id/buttonDroite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/buttonAvance"
        android:layout_toRightOf="@id/buttonAvance"
        android:background="@drawable/fleche_droite" />

    <Button
        android:id="@+id/buttonRecule"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/buttonDroite"
        android:layout_toLeftOf="@id/buttonDroite"
        android:background="@drawable/fleche_bas" />

    <Button
        android:id="@+id/buttonGauche"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/buttonAvance"
        android:layout_toLeftOf="@id/buttonRecule"
        android:background="@drawable/fleche_gauche" />

    <com.kercar.osmandroid.OSMAndroid
        android:id="@+id/OSM"
        android:layout_width="250dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:enabled="false" />

    <Button
        android:id="@+id/buttonPhoto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonphoto" />

    <SeekBar
        android:id="@+id/barVitesse"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="-30dp"
        android:rotation="270" />

</RelativeLayout>