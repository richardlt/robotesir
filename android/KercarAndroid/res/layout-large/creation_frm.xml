<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_portrait"
    android:orientation="vertical" >    
    
    <TextView
	    android:id="@+id/lblTitre"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
		android:layout_centerHorizontal="true"
		android:textSize="50sp"
		android:text="@string/edit_nom"
		android:textColor="#ffffff"/>
        
    <TextView
	    android:id="@+id/lblNom"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="100dp"
		android:layout_marginLeft="50dp"
		android:textSize="25sp"
		android:text="@string/edit_nom"
		android:textColor="#ffffff"/>

   <EditText
	    android:id="@+id/txtNom"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="100dp"
	    android:layout_marginLeft="250dp"
	    android:textSize="25sp"
	    android:hint="@string/edit_nom"
	    android:textColor="#ffffff"/>   
    
    <TextView
	    android:id="@+id/lblEmail"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="210dp"
		android:layout_marginLeft="50dp"
		android:textSize="25sp"
		android:text="@string/edit_email"
		android:textColor="#ffffff"/>
    
    <EditText
	    android:id="@+id/txtEmail"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="210dp"
	    android:layout_marginLeft="250dp"
	    android:textSize="25sp"
	    android:inputType="textEmailAddress"
	    android:hint="@string/edit_email"
	    android:textColor="#ffffff"/>
    
    <TextView
	    android:id="@+id/lblEmailError"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="180dp"
		android:layout_marginLeft="250dp"
		android:textSize="25sp"
		android:text="@string/syntax_error"
		android:textColor="#ff0000"
		android:visibility="invisible"/>
    
    <TextView
	    android:id="@+id/lblRetourDepart"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="320dp"
		android:layout_marginLeft="50dp"
		android:textSize="25sp"
	    android:text="@string/edit_retour_robot" 
	    android:textColor="#ffffff"/>
    
    <TextView
	    android:id="@+id/lblPhotoArrivee"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="430dp"
		android:layout_marginLeft="50dp"
		android:textSize="25sp"
	    android:text="@string/edit_photo" 
	    android:textColor="#ffffff"/>
    
   	<CheckBox
		android:id="@+id/cbxRetourDepart"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblRetourDepart"
        android:layout_alignBottom="@+id/lblRetourDepart"
        android:layout_alignLeft="@+id/txtEmail"
        android:layout_alignParentRight="true"
		android:checked="true"
        android:text="@string/oui"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:button="@drawable/checkbox"/>
    	
    <CheckBox
		android:id="@+id/cbxPhotoArrivee"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/lblPhotoArrivee"
        android:layout_alignBottom="@+id/lblPhotoArrivee"
        android:layout_alignLeft="@+id/cbxRetourDepart"
        android:checked="true"
        android:text="@string/oui"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:button="@drawable/checkbox"/>
    
    <LinearLayout     
    	android:layout_width="fill_parent"
    	android:layout_height="70dp"
    	android:orientation="horizontal"
    	android:layout_alignParentBottom="true">
        
        <Button
		    android:id="@+id/btnSupprimer"
		    android:layout_height="match_parent"
		    android:layout_width="match_parent"
		    android:text="@string/button_supprimer"
		    android:textSize="25sp"
		    android:textColor="#ffffff"
		    android:layout_weight="1"/> 
	    
	    <Button
		    android:id="@+id/btnSuivant"
		    android:layout_height="match_parent"
		    android:layout_width="match_parent"
			android:text="@string/button_suivant"
			android:textSize="25sp"
			android:textColor="#ffffff"
			android:layout_weight="1"/>
	    
    </LinearLayout>

</RelativeLayout>